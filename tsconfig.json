{
   "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",

      "target": "es5",
      "jsx": "react-jsx",

      "allowJs": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"]
      },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
   },
   "ts-node": {
      "compilerOptions": {
         "module": "CommonJS"
      }
   },
   "isolatedModules": true,
   "include": [
      "./config/jest/setupTests.ts",
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "src/shared/config/storybook/StyleDecorator/StyleDecorator.tsx."
   ]
}
